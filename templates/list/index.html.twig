		{% block javascripts %}
			{% block importmap %}
				{{ importmap('app') }}
			{% endblock %}
		{% endblock %}
	</head>

	{% block body %}
		{% include 'base.html.twig' %}
		<h1 class="text-center text-3xl font-bold mb-6 text-white">Listes</h1>
		<ul class="bg-zinc-900 rounded-3xl w-96 h-2/3 mt-10 mb-10 justify-center mx-auto p-10">
			{% for list in lists %}
				<li>
					<img src="{{ asset('assets/uploads/covers/' ~ list.cover) }}" alt="Cover" class="w-80 rounded-2xl">
					<p class="text-center text-xl font-bold text-white mt-3 mb-3">{{ list.title }}</p>
					<p class="text-center italic text-zinc-400 mb-3">{{ list.date|date('d/m/Y - H:i') }}</p>
					<p class="mb-3">{{ list.description }}</p>
					<div class="flex justify-center space-x-2 h-10">
						<a type="button" href="{{ list.website }}" class="text-white bg-zinc-800 hover:bg-zinc-700 font-medium rounded-2xl text-sm p-5 border-zinc-700 flex items-center justify-center">AccÃ©der</a>
						<a class="flex bg-indigo-700 hover:bg-indigo-800 rounded-2xl text-white font-bold p-5 items-center justify-center">{{ list.likes }} ğŸ’œ</a>
					</div>
				</li>
			{% else %}
				<p>Aucune liste trouvÃ© ! :'(</p>
			{% endfor %}
		</ul>
	{% endblock %}
</html>
